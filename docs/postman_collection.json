{
  "info": {
    "name": "SimpleShop API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/health"
      }
    },
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"newuser\",\n  \"password\": \"password\"\n}"
        },
        "url": "{{baseUrl}}/api/auth/register"
      }
    },
    {
      "name": "Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const json = pm.response.json();",
              "if (json.token) { pm.collectionVariables.set('token', json.token); }"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"password\"\n}"
        },
        "url": "{{baseUrl}}/api/auth/login"
      }
    },
    {
      "name": "Logout",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/api/auth/logout"
      }
    },
    {
      "name": "Products",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/products"
      }
    },
    {
      "name": "Product by ID",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/products/1"
      }
    },
    {
      "name": "Categories",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/categories"
      }
    },
    {
      "name": "Reviews - List",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/products/1/reviews"
      }
    },
    {
      "name": "Reviews - Add",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"rating\": 5,\n  \"comment\": \"Great product!\"\n}"
        },
        "url": "{{baseUrl}}/api/products/1/reviews"
      }
    },
    {
      "name": "Reviews - Delete",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/api/products/1/reviews/{{reviewId}}"
      }
    },
    {
      "name": "Orders - List",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/api/orders"
      }
    },
    {
      "name": "Orders - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"items\": [\n    {\n      \"id\": 1,\n      \"title\": \"Product\",\n      \"price\": 10,\n      \"quantity\": 2\n    }\n  ],\n  \"total\": 20\n}"
        },
        "url": "{{baseUrl}}/api/orders"
      }
    },
    {
      "name": "Orders - Get by ID",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/api/orders/{{orderId}}"
      }
    }
  ]
}
